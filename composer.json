{
    "name": "deinte/umami-php-sdk",
    "description": "Typed Saloon client for the Umami Analytics API.",
    "keywords": [
        "umami",
        "analytics",
        "sdk",
        "api"
    ],
    "homepage": "https://github.com/Deinte/umami-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Dante Schrauwen",
            "homepage": "https://github.com/Deinte",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "saloonphp/pagination-plugin": "^2.2",
        "saloonphp/saloon": "^3.14"
    },
    "require-dev": {
        "laravel/pint": "^1.15",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "phpstan/phpstan": "^2.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "Deinte\\UmamiSdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Deinte\\UmamiSdk\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "format": "vendor/bin/pint",
        "test": "vendor/bin/pest",
        "analyse": "vendor/bin/phpstan analyse",
        "baseline": "vendor/bin/phpstan analyse --generate-baseline",
        "real": "php tests/TestSupport/scripts/real-test.php"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    }
}
